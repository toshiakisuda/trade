<%= form_for @order, :html => { :class => "form-horizontal order" } do |f| %>

  <% if @order.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @order.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :stock_id, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :stock_id, :class => 'form-control' %>
    </div>
    <%=f.error_span(:stock_id) %>
  </div>
  <div class="form-group">
    <%= f.label :date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:date) %>
  </div>
  <div class="form-group">
    <%= f.label :buy, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :buy, :class => 'form-control' %>
    </div>
    <%=f.error_span(:buy) %>
  </div>
  <div class="form-group">
    <%= f.label :sell, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sell, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sell) %>
  </div>
  <div class="form-group">
    <%= f.label :volume, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :volume, :class => 'form-control' %>
    </div>
    <%=f.error_span(:volume) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                orders_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
