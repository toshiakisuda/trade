#!/usr/bin/env ruby
require File.expand_path('../../config/application', __FILE__)
require 'yahoo-finance.rb'
Rails.application.require_environment!

class MyServer < DaemonSpawn::Base
  def start(args)
    @aaa = YahooFinanceStock.new
    loop {
      @aaa.all_get if @aaa.market_time?
      sleep 10
    }
    # process command-line args
    # start your bad self
  end

  def stop
    # stop your bad self
  end
end

MyServer.spawn!(:log_file => "#{Rails.root}/log/trade_server.log",
                :pid_file => "#{Rails.root}/log/trade_server.pid",
                :sync_log => true,
                :working_dir => File.dirname(__FILE__))
